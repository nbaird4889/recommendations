<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Staatliches&display=swap');
    </style>
    <title>Recommendation Application</title>
</head>

<body>
        <header class="home-header">
            <h1 class="home-headline">The Recommendation Application</h1>
            <nav>
                <ul class="nav-links">
                    <a class="nav-link" href="/books">
                        <li>BOOKS</li>
                    </a>
                    <a class="nav-link" href="/shows">
                        <li>TV SHOWS</li>
                    </a>
                    <a class="nav-link" href="/restaurants">
                        <li>RESTAURANTS</li>
                    </a>
                    <a class="nav-link" href="/recipes">
                        <li>RECIPES</li>
                    </a>
                    <a class="nav-link" href="/dawgs">
                        <li>DAWGS</li>
                    </a>
                    <% if(user) { %>
                    <a class="home-login-link" href="/logout"><button class="home-login">LOGOUT</button></a>
                    <a class="home-login-link" href="/dashboard"><button class="home-login">DASHBOARD</button></a>
                    <% } else { %>
                    <a class="home-login-link" href="/login"><button class="home-login">LOGIN</button></a>
                    <a class="home-login-link" href="/signup"><button class="home-login">SIGN UP</button></a>
                    <% } %>
                </ul>
            </nav>
        </header>
        <h2>Hello, <%= user.first_name %></h2>
        <hr>
        <% if(books.length) { %>
            <h3>Here are all the Books you've shared</h3>
            <% books.forEach(book => { %>
                <ul>
                    <li>
                        <a href="/books/<%= book._id%>"><%=book.title%></a>
                    </li>
                </ul>
            <% }) %>
        <% } else { %>
            <h3>You haven't shared book recommendations yet</h3>
        <% } %>

        <% if(dawgs.length) { %>
            <h3>Here are all the Dawg items you've shared</h3>
            <% dawgs.forEach(dawg => { %>
                <ul>
                    <li>
                        <a href="/dawgs/<%= dawg._id%>"><%=dawg.item%></a>
                    </li>
                </ul>
            <% }) %>
        <% } else { %>
            <h3>You haven't shared book recommendations yet</h3>
        <% } %>
</body>

</html>
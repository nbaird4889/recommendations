<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Staatliches&display=swap');
    </style>
    <title>Recommendations</title>
</head>

<body>
    <header>
        <a class="header-link" id="active" href="/">
            <h1 class="header-headline">The Recommendation Application</h1>
        </a>
        <nav>
            <ul class="nav-links">
                <a class="nav-link" href="/books">
                    <li>BOOKS</li>
                </a>
                <a class="nav-link" href="/shows">
                    <li>TV SHOWS</li>
                </a>
                <a class="nav-link" href="/restaurants">
                    <li>RESTAURANTS</li>
                </a>
                <a class="nav-link" href="/recipes">
                    <li>RECIPES</li>
                </a>
                <a class="nav-link" href="/dawgs">
                    <li>DAWGS</li>
                </a>
                <% if(user) { %>
                <a class="home-login-link" href="/logout"><button class="home-login">LOGOUT</button></a>
                <a class="home-login-link" href="/dashboard"><button class="home-login">DASHBOARD</button></a>
                <% } else { %>
                <a class="home-login-link" href="/login"><button class="home-login">LOGIN</button></a>
                <a class="home-login-link" href="/signup"><button class="home-login">SIGN UP</button></a>
                <% } %>
            </ul>
        </nav>
        <div id="hamburger-icon" onclick="toggleMobileMenu(this)">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
            <ul class="mobile-menu">
                <a class="nav-link" href="/books">
                    <li>BOOKS</li>
                </a>
                <a class="nav-link" href="/shows">
                    <li>TV SHOWS</li>
                </a>
                <a class="nav-link" href="/restaurants">
                    <li>RESTAURANTS</li>
                </a>
                <a class="nav-link" href="/recipes">
                    <li>RECIPES</li>
                </a>
                <a class="nav-link" href="/dawgs">
                    <li>DAWGS</li>
                </a>
            </ul>
        </div>
    </header>

    <main class="dawg-main">
        <h2 class="index-headline">DAWG RECOMMENDATIONS</h2>
        <% if(user) { %>
            <div class="new-button-div"><a href="/dawgs/new"><button class="new-button">NEW DAWG RECOMMENDATION</button></a>
            <% } else { %>
            <% } %>
        </div>
        <ul class="index-list">
            <% dawgs.forEach(dawg => { %>
            <a class="index-link" href="/dawgs/<%=dawg._id%>">
                <div class="index-items" id="dawg-list">
                    <li>
                        <h2 class="index-title"><%=dawg.item%></h2>
                    </li>
                </div>
            </a>
            <% }) %>
        </ul>
    <div class="dawg-footer"></div>
    </main>
    <footer>
        <p>Â© Nicole Baird | 2022</p>
    </footer>
</body>

</html>